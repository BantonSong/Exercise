<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <com.song.exercise.progresschart.ProgressChartView
        android:id="@+id/progressChartView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="20dp"
            app:aboveBlewTextSpace="10dp"
            app:aboveTextColor="@color/colorAccent"
            app:aboveTextSize="10sp"
            app:belowRowSpace="1.5"
            app:belowTextColor="@color/black"
            app:belowTextSize="20sp"
            app:leftRightSpace="30dp"
            app:lineCompleteColor="@color/colorPrimaryDark"
            app:lineIncompleteColor="@color/black"
            app:progressCompleteDrawable="@drawable/incomplete"
            app:progressIncompleteDrawable="@drawable/complete"
            app:verticalLineWidth="10dp" />

</LinearLayout>